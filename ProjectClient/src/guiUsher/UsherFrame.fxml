<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!-- Main layout container for the Usher Frame -->

<AnchorPane prefHeight="491.0" prefWidth="481.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guiUsher.UsherFrameController">
   <children>

      <!-- Logout button (bottom right corner) -->
      <Button id="btnLogout" fx:id="btnLogout" layoutX="428.0" layoutY="439.0" mnemonicParsing="false" onAction="#onLogoutClicked" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Logout" />

      <!-- Title label -->
      <Label layoutX="14.0" layoutY="20.0" text="Usher Page" />

      <!-- Label for displaying error or status messages -->
      <Label fx:id="lblError" layoutX="28.0" layoutY="235.0" prefHeight="25.0" prefWidth="400.0" />

      <!-- Button to fetch and show all subscribers -->
      <Button id="seeSubscribers" fx:id="btnSeeSub" layoutX="126.0" layoutY="85.0" mnemonicParsing="false" onAction="#onSeeSubscribers" prefHeight="10.0" prefWidth="228.0" text="See Subscribers">
         <font>
            <Font size="10.0" />
         </font></Button>

      <!-- Button to fetch and show active parking spots -->
      <Button id="seeActiveParkingSpots" fx:id="btnSeeActiv" layoutX="126.0" layoutY="47.0" mnemonicParsing="false" onAction="#onSeeActiveParkingSpots" prefHeight="10.0" prefWidth="228.0" text="See Active Parking Spots">
         <font>
            <Font size="10.0" />
         </font></Button>

      <!-- Button to navigate to the Add New Subscriber screen -->
      <Button id="addNewSubscriber" fx:id="btnAddSub" layoutX="127.0" layoutY="9.0" mnemonicParsing="false" onAction="#onAddNewSubscriber" prefHeight="10.0" prefWidth="228.0" text="Add New Subscriber">
         <font>
            <Font size="10.0" />
         </font></Button>

      <Button id="SubscriberHistory" fx:id="SubscriberHistory" layoutX="126.0" layoutY="126.0" mnemonicParsing="false" onAction="#onSubscriberHistory" prefHeight="9.0" prefWidth="228.0" text="See Subscriber History">
         <font>
            <Font size="10.0" />
         </font></Button>
      <Button id="SubscriberTag" fx:id="AddTagToSubscriber" layoutX="127.0" layoutY="166.0" mnemonicParsing="false" onAction="#onAddTagToSubscriber" prefHeight="18.0" prefWidth="228.0" text="Add Tag To Subscriber">
         <font>
            <Font size="10.0" />
         </font></Button>

      <!-- Text area for showing server responses (readonly) -->
      <TextArea id="OUTPUT" fx:id="txtReportOutput" editable="false" layoutX="26.0" layoutY="261.0" prefHeight="160.0" prefWidth="437.0" />
     
   </children>
</AnchorPane>
