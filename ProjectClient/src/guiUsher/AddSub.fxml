<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<!--
    FXML layout for the "Add Subscriber" window.
    Allows ushers to input a new subscriber's details: name, phone number, and email.
    Includes buttons to save or close the form.
-->

<AnchorPane prefHeight="349.0" prefWidth="312.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guiUsher.AddSubController">
   <children>

      <!-- Label for "User Name" input field -->
      <Label id="lblUserName" layoutX="28.0" layoutY="103.0" text="User Name:" />

      <!-- Label for "Phone Number" input field -->
      <Label id="lblPhoneNumber" layoutX="28.0" layoutY="140.0" text="Phone Number:" />

      <!-- Text field to enter subscriber's user name -->
      <TextField id="txtUserName" fx:id="txtUserName" layoutX="128.0" layoutY="99.0" />

      <!-- Text field to enter subscriber's phone number -->
      <TextField id="txtPhoneNumber" fx:id="txtPhoneNumber" layoutX="128.0" layoutY="136.0" />

      <!-- "Close" button: triggers onClose() to return to the previous screen -->
      <Button id="btnclose" fx:id="btnclose" layoutX="28.0" layoutY="301.0" mnemonicParsing="false" onAction="#onClose" text="Close" />

      <!-- "Save" button: triggers onSave() to submit new subscriber data -->
      <Button id="btnsave" fx:id="btnsave" layoutX="242.0" layoutY="301.0" mnemonicParsing="false" onAction="#onSave" text="Save" />

      <!-- Title label at the top of the window -->
      <Label id="lblAddANewSubscriber" layoutX="99.0" layoutY="22.0" text="Add a new subscriber:" />

      <!-- Label for "Email" input field -->
      <Label id="lblEmail" layoutX="28.0" layoutY="175.0" text="Email:" />

      <!-- Text field to enter subscriber's email -->
      <TextField id="txtEmail" fx:id="txtEmail" layoutX="128.0" layoutY="171.0" />

      <!-- Label to display error or success messages -->
      <Label id="ErrorMessage" fx:id="ErrorMessage" layoutX="46.0" layoutY="222.0" prefHeight="57.0" prefWidth="224.0" text="" />

   </children>
</AnchorPane>
